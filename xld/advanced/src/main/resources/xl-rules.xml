<rules xmlns="http://www.xebialabs.com/xl-deploy/xl-rules">
	<rule name="advanced.ExecutedDeployment_CREATE" scope="deployed">
		<conditions>
			<type>advanced.ExecutedDeployment</type>
			<operation>CREATE</operation>
		</conditions>
		<steps>
			<os-script>
				<order>10</order>
        <description>Initial Advanced Deployment</description>
				<script>scripts/create</script>
			</os-script>
		</steps>
	</rule>
    <rule name="advanced.ExecutedDeployment_MODIFY" scope="deployed">
        <conditions>
            <type>advanced.ExecutedDeployment</type>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <os-script>
                <order>10</order>
                <description>Modify Advanced Deployment</description>
                <script>scripts/modify</script>
                <freemarker-context>
                    <deployedApplication expression="true">deployedApplication</deployedApplication>
                </freemarker-context>
            </os-script>
        </steps>
    </rule>
	<rule name="advanced.ExecutedDeployment_DESTROY" scope="deployed">
		<conditions>
            <type>advanced.ExecutedDeployment</type>
			<operation>DESTROY</operation>
		</conditions>
		<planning-script-path>scripts/generate_destroy_plan.py</planning-script-path>
	</rule>
	<!--
	##########################################################################
	#  Demystify XLD Variables
	#
	-->
	<rule name="Demystify.scriptrule" scope="deployed">
    <conditions>
      <type>advanced.ExecutedDeployment</type>
      <operation>CREATE</operation>
      <operation>MODIFY</operation>
      <operation>DESTROY</operation>
    </conditions>
    <steps>
      <os-script>
				<description>Demystify Free Marker Variables</description>
        <script>scripts/osscript.sh.ftl</script>
        <freemarker-context>
          <delta expression="true">delta</delta>
        </freemarker-context>
      </os-script>
    </steps>
  </rule>
	<rule name="Demystify.testrule" scope="deployed">
    <conditions>
      <type>advanced.ExecutedDeployment</type>
      <operation>CREATE</operation>
      <operation>MODIFY</operation>
      <operation>DESTROY</operation>
    </conditions>
    <steps>
      <jython>
				<description>Demystify Python Variables</description>
       	<script-path>scripts/myscript.py</script-path>
        <jython-context>
          <user>XebiaLabs</user>
        </jython-context>
      </jython>
    </steps>
  </rule>

</rules>
